<Window x:Class="HaushaltsäquivalenteWPFApp.FirstPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HaushaltsäquivalenteWPFApp"
        mc:Ignorable="d"
        Title="FirstPersonWindow" Height="200" Width="260" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Margin="5">Um das Programm zu initialisieren, muss mindestens eine Person erstellt werden. Dafür ist lediglich der Name notwendig.</TextBlock>
            <TextBlock Margin="5">Gib hier den Name der neuen Person ein:</TextBlock>
            <TextBox x:Name="NewNameTextBox" Margin="5" Background="LightGray" Width="250" HorizontalAlignment="Left"></TextBox>
            <Button x:Name="ConfirmButton" Width="100" HorizontalAlignment="Center" Margin="5" Click="ConfirmButton_Click">Bestätigen</Button>
        </StackPanel>
    </Grid>

</Window>
